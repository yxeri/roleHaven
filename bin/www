#!/usr/bin/env node

'use strict';

const app = require('./../app');
const appConfig = require('../config/defaults/config').app;

/**
 * Start server
 */
function run() {
  // Sets server port
  app.set('port', appConfig.port);

// Starts Express server
  const server = app.listen(app.get('port'), () => {
  });

// SocketIO
  const io = app.io;

  io.attach(server);
}

run();
