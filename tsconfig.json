{
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "isolatedModules": true,
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./docs",
    "./bbrdocs"
  ]
}
